<header id="summary" class="block">
    <div class="header">
        <div class="payoff {{ rating.getOverall() }}">
            <p>{{ rating.getMessage() }}</p>
        </div>
        <div class="stationName">
            <p ng-click="toggleMenu()">{{ station.getName() }}</p>
        </div>
        <div class="measureTime">
            <p>Gemeten om {{ presentData.getUpdatedTime() }}</p>
        </div>
    </div>
    <div class="measurements">
        <div class="measurement {{ rating.getTemp() }}">
            <div class="indicator">
                <div class="icon-container">
                    <i class="pe-7w-thermometer-1-2"></i>
                </div>
                <p>Temperatuur</p>
            </div>
            <div class="average">
                <div class="value-container">
                    <p>Normaal is het</p>
                    <span class="value">{{ historicData.getTempAvg() }}</span>
                    <span>&deg;C</span>
                </div>
            </div>
            <div class="indicator-value">
                <div class="value-container">
                    <p class="value">{{ presentData.getTemp() }}&deg;</p>
                    <p class="suffix">Celsius</p>
                </div>
            </div>
        </div>
        <div class="measurement {{ rating.getRain() }}">
            <div class="indicator">
                <div class="icon-container">
                    <i class="pe-7w-umbrella"></i>
                </div>
                <p>Regenval</p>
            </div>
            <div class="average">
                <div class="value-container">
                    <p>Normaal valt er</p>
                    <p class="value">{{ historicData.getRainAvg() }}</p>
                    <p>mm/uur</p>
                </div>
            </div>
            <div class="indicator-value">
                <div class="value-container">
                    <p class="value">{{ presentData.getRain() }}</p>
                    <p class="suffix">mm</p>
                </div>
            </div>
        </div>
        <div class="measurement {{ rating.getWind() }}">
            <div class="indicator">
                <div class="icon-container">
                    <i class="pe-7w-wind"></i>
                </div>
                <p>Windkracht</p>
            </div>
            <div class="average">
                <div class="value-container">
                    <p>Normaal is het</p>
                    <span class="value">{{ historicData.getBeaufortAvg() }}</span>
                    <span>bft</span>
                </div>
            </div>
            <div class="indicator-value">
                <div class="value-container">
                    <p class="value">{{ presentData.getBeaufort() }}</p>
                    <p class="suffix">bft</p>
                </div>
            </div>
        </div>
    </div>
</header>