<style>
</style>
<div id="table" class="block" ng-controller="forecastCtrl">
    <div id="text-summary" ng-hide="longMsg">
        <p>{{ messages.getShortMsg() }}</p>
        <span class="more" ng-click="toggleSummaryMsg()">
            <i class="fa fa-angle-right"></i>
            <span>Meer</span>
        </span>
    </div>
    <div id="text-summary" ng-show="longMsg">
        <p>{{ messages.getLongMsg() }}</p>
        <span class="more" ng-click="toggleSummaryMsg()">
            <i class="fa fa-angle-up"></i>
            <span>Minder</span>
        </span>
    </div>
    <table id="week">
        <thead>
        <tr>
            <th></th>
            <th>
                <i class="wi wi-thermometer"></i>
            </th>
            <th>
                <i class="wi wi-rain-mix"></i>
            </th>
            <th>
                <i class="wi wi-cloudy-windy"></i>
            </th>
        </tr>
        </thead>
        <tbody>
        {% for day in forecastData.getDays(0, 5) %}
            <tr>
                {% if loop.index == 1 %}
                    <td>Vandaag</td>
                {% elseif loop.index == 2 %}
                    <td>Morgen</td>
                {% else %}
                    <td>{{ day.getDayname() }}</td>
                {% endif %}
                <td>
                    <span class="value">{{ day.getTemp() }}</span>
                    <span class="suffix">&deg;C</span>
                </td>
                <td>
                    <span class="value">{{ day.getRain() }}</span>
                    <span class="suffix">mm</span>
                </td>
                <td>
                    <span class="value">{{ day.getBeaufort() }}</span>
                    <span class="suffix">bft</span>
                </td>
            </tr>
        {% endfor %}
        {% for day in forecastData.getDays(5, 3) %}
            <tr ng-show="more">
                <td>{{ day.getDayname() }}</td>
                <td>
                    <span class="value">{{ day.getTemp() }}</span>
                    <span class="suffix">&deg;C</span>
                </td>
                <td>
                    <span class="value">{{ day.getRain() }}</span>
                    <span class="suffix">mm</span>
                </td>
                <td>
                    <span class="value">{{ day.getBeaufort() }}</span>
                    <span class="suffix">bft</span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <span ng-hide="more" class="more" ng-click="toggleMore()">
        <i class="fa fa-angle-right"></i>
        <span>Meer</span>
    </span>
    <span ng-show="more" class="more" ng-click="toggleMore()">
        <i class="fa fa-angle-up"></i>
        <span>Minder</span>
    </span>
</div>
